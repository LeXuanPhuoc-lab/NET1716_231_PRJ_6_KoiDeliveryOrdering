@model KoiDeliveryOrdering.MVCWebApp.Models.DailyCareScheduleModels;

@{
    ViewData["Title"] = "Delete";
}

<h2>Are you sure you want to delete this?</h2>
<div>
    <h4>DailyCareSchedule</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TaskFrequency)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TaskFrequency)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.RecommendedValue)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RecommendedValue)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.StartDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StartDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EndDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EndDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TaskDuration)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TaskDuration)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Notes)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Notes)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IsCritical)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IsCritical)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CaregiverName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CaregiverName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LastPerformedDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LastPerformedDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CareTask)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CareTask.TaskName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DeliverOrderDetail)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DeliverOrderDetail.Id)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="DailyCareScheduleId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>

@section Scripts {
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('form').on('submit', function (event) {
                event.preventDefault(); // Ngăn form submit mặc định

                var dailyCareScheduleId = $('#DailyCareScheduleId').val(); // Lấy ID từ input ẩn

                $.ajax({
                    url: 'http://localhost:7000/api/daily-care-schedule/' + dailyCareScheduleId + '/remove',
                    type: 'DELETE', // DELETE method cho việc xóa
                    success: function (response) {
                        alert('Delete successful!');
                        window.location.href = '@Url.Action("Index")'; // Redirect về trang Index sau khi thành công
                    },
                    error: function (xhr, status, error) {
                        alert('Error: ' + xhr.responseText);
                    }
                });
            });
        });
    </script>
}

